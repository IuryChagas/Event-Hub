<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Event_Hub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/argon-design-system.css" />
</head>
<style>
    .navbar-light .navbar-brand {
        color: aliceblue;
    }
    .navbar-light:hover, .navbar-brand:hover {
        color: #32325d;
    }
    body {
        background-color: #000;
    }
    .bg-white {
        background-color: transparent !important;
    }
    .border-bottom {
        border-bottom: hidden !important;
    }
    li a {
        color: #fff !important;
        font-weight: 600;
    }
    li a.text-white:hover {
        color: #32325d !important;
    }
    tbody {
        background-color: aliceblue !important;
        color: #333;
    }
    .container {
       text-align: center;
    }
    body {
       background-color: black;
    }
    h1, a, p {
       color: #fff;
    }
</style>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a asp-action="Index" asp-controller="Home"><button class="btn btn-outline-success buynow">Please go back to earth</button></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container section-header">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container text-white" align="center">
            
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
